# BLOCK TOP : salt managed zone : please do not edit
# This tempalte adds interface, ip rules and creates a routing table for nodes that have bond0.100 defined
# nlbdsr is a route_table reference that also created by salt
{% set intfs = salt['network.interfaces']() %}
{%- for intf in intfs -%}
  {%- if intf == 'ens4' -%}
auto {{ intf }}
  iface {{ intf }} inet manual
  vlan-raw-device bond0
  up ifconfig {{ intf }}  up
  up ip route replace default dev {{ intf }} table nlbdsr
  up ip route replace default via {{ grains['lbaas_gw'] }} dev {{ intf }} table nlbdsr
    {%- set vips = grains['lbaas_vips'] %}
    {%- for vip in vips %}
  up ip rule add from {{ vip }} table nlbdsr
    {%- endfor -%}
  {%- endif -%}
{% endfor %}
# BLOCK BOTTOM : end of salt managed zone --
